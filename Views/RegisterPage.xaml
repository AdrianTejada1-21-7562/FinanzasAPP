<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzasApp.Views.RegisterPage"
             Shell.NavBarIsVisible="False"
             Style="{StaticResource PageBackgroundStyle}">

    <Grid>

        <!-- REUTILIZAMOS FONDO CYBERPUNK (SIN ANIMACIÓN) -->
        <Grid InputTransparent="True">
            <Frame WidthRequest="220"
                   HeightRequest="220"
                   CornerRadius="110"
                   HasShadow="False"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   Margin="0,-60,-40,0"
                   Opacity="0.6">
                <Frame.Background>
                    <RadialGradientBrush Center="0.3,0.3" Radius="0.9">
                        <GradientStop Color="#3B82F6" Offset="0.0" />
                        <GradientStop Color="#020617" Offset="1.0" />
                    </RadialGradientBrush>
                </Frame.Background>
            </Frame>

            <Frame WidthRequest="280"
                   HeightRequest="280"
                   CornerRadius="140"
                   HasShadow="False"
                   HorizontalOptions="Start"
                   VerticalOptions="End"
                   Margin="-60,0,0,-80"
                   Opacity="0.7">
                <Frame.Background>
                    <RadialGradientBrush Center="0.5,0.5" Radius="1.0">
                        <GradientStop Color="#ec4899" Offset="0.0" />
                        <GradientStop Color="#020617" Offset="1.0" />
                    </RadialGradientBrush>
                </Frame.Background>
            </Frame>
        </Grid>

        <!-- CONTENIDO REGISTRO (SIMPLIFICADO) -->
        <VerticalStackLayout Padding="24"
                             Spacing="24"
                             VerticalOptions="Center">

            <VerticalStackLayout Spacing="4">
                <Label Text="Crear cuenta"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="Registra un usuario para acceder a FinanzasApp."
                       FontSize="13"
                       TextColor="{StaticResource TextGray}" />
            </VerticalStackLayout>

            <Frame Style="{StaticResource CardFrameStyle}">
                <VerticalStackLayout Spacing="12">

                    <Entry x:Name="UsernameEntry"
                           Placeholder="Usuario"
                           Style="{StaticResource InputStyle}" />

                    <Entry x:Name="PasswordEntry"
                           Placeholder="Contraseña"
                           IsPassword="True"
                           Style="{StaticResource InputStyle}" />

                    <Entry x:Name="ConfirmEntry"
                           Placeholder="Confirmar contraseña"
                           IsPassword="True"
                           Style="{StaticResource InputStyle}" />

                    <Button Text="Registrar"
                            Style="{StaticResource GradientButtonStyle}"
                            Clicked="OnRegisterClicked" />

                    <Button Text="Volver al inicio"
                            BackgroundColor="#111827"
                            TextColor="White"
                            CornerRadius="999"
                            Clicked="OnBackClicked" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
