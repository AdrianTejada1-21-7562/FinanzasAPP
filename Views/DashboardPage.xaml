<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FinanzasApp.ViewModels"
             xmlns:models="clr-namespace:FinanzasApp.Models"
             xmlns:conv="clr-namespace:FinanzasApp.Converters"
             x:Class="FinanzasApp.Views.DashboardPage"
             x:DataType="viewModels:DashboardViewModel"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <conv:BoolToColorConverter x:Key="AmountColor" TrueColor="#22C55E" FalseColor="#F97373" />
    </ContentPage.Resources>

    <Grid>
        <!-- Fondos luminosos -->
        <Grid InputTransparent="True">
            <Ellipse x:Name="TopGlow"
                     WidthRequest="320"
                     HeightRequest="320"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="-60,-40,0,0"
                     Opacity="0.45">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.3,0.2" Radius="0.9">
                        <GradientStop Color="#57AEFF" Offset="0.0" />
                        <GradientStop Color="#00000000" Offset="1.0" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse x:Name="BottomGlow"
                     WidthRequest="380"
                     HeightRequest="380"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="0,0,-80,-120"
                     Opacity="0.5">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.7,0.8" Radius="1.0">
                        <GradientStop Color="#8B5CF6" Offset="0.0" />
                        <GradientStop Color="#00000000" Offset="1.0" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <ScrollView VerticalScrollBarVisibility="Never">
            <VerticalStackLayout x:Name="MainContainer" Padding="20,48,20,32" Spacing="18">
                <!-- Header -->
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Start">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="FinanzasApp" FontSize="22" FontAttributes="Bold" />
                        <Label Text="Panel principal" TextColor="{StaticResource TextGray}" FontSize="14" />
                    </VerticalStackLayout>
                    <Border BackgroundColor="#1B2236" StrokeThickness="0" Padding="12,6" StrokeShape="RoundRectangle 14" VerticalOptions="Center">
                        <Label Text="Hoy" TextColor="{StaticResource TextGray}" />
                    </Border>
                </Grid>

                <!-- Resumen -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="14">
                    <Border Style="{StaticResource CardBorderStyle}" Padding="16,18">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Ingresos" TextColor="{StaticResource SuccessGreen}" FontAttributes="Bold" />
                            <Label Text="{Binding TotalIngresos, StringFormat='${0:F2}'}" FontSize="26" FontAttributes="Bold" />
                            <Label Text="Últimos ingresos registrados" TextColor="{StaticResource TextGray}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Style="{StaticResource CardBorderStyle}" Padding="16,18">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Gastos" TextColor="{StaticResource DangerRed}" FontAttributes="Bold" />
                            <Label Text="{Binding TotalGastos, StringFormat='${0:F2}'}" FontSize="26" FontAttributes="Bold" />
                            <Label Text="Controla tus egresos" TextColor="{StaticResource TextGray}" FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Proporción -->
                <Border Style="{StaticResource CardBorderStyle}" Padding="18,16">
                    <VerticalStackLayout Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Proporción de gastos" FontAttributes="Bold" />
                            <Label Text="{Binding GastosProporcion, StringFormat='{0:P0}'}" TextColor="{StaticResource TextGray}" />
                        </Grid>
                        <ProgressBar Progress="{Binding GastosProporcion}" />
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                            <Button Text="Nuevo movimiento" Style="{StaticResource PrimaryButtonStyle}" Grid.Column="0" Clicked="OnNewMovementClicked" />
                            <Button Text="API" Style="{StaticResource SecondaryButtonStyle}" Grid.Column="1" WidthRequest="90" Clicked="OnApiClicked" />
                            <Button Text="Sensor" Style="{StaticResource SecondaryButtonStyle}" Grid.Column="2" WidthRequest="100" Clicked="OnSensorClicked" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Lista -->
                <Border Style="{StaticResource CardBorderStyle}" Padding="12" StrokeThickness="0.5" Stroke="#1F2A44">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Últimos movimientos" FontAttributes="Bold" />
                        <CollectionView ItemsSource="{Binding Transactions}" SelectionMode="None">
                            <CollectionView.EmptyView>
                                <Grid Padding="20">
                                    <Label Text="Sin movimientos aún" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{StaticResource TextGray}" />
                                </Grid>
                            </CollectionView.EmptyView>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Transaction">
                                    <SwipeView>
                                        <SwipeView.RightItems>
                                            <SwipeItems>
                                                <SwipeItem Text="Eliminar" BackgroundColor="#EF4444" IconImageSource="trash.png" Invoked="OnDeleteSwipeItemInvoked" CommandParameter="{Binding}" />
                                            </SwipeItems>
                                        </SwipeView.RightItems>

                                        <Border StrokeShape="RoundRectangle 18" BackgroundColor="#0F1525" StrokeThickness="0" Padding="12" Margin="0,0,0,10">
                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="4">
                                                <Label Grid.Row="0" Grid.Column="0" Text="{Binding Description}" FontAttributes="Bold" />
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Amount, StringFormat='${0:F2}'}" FontAttributes="Bold" TextColor="{Binding IsIncome, Converter={StaticResource AmountColor}}" />
                                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" TextColor="{StaticResource TextGray}" FontSize="12" />
                                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding IsIncome, StringFormat='Ingreso: {0}'}" TextColor="{StaticResource TextGray}" FontSize="12" HorizontalTextAlignment="End" />
                                            </Grid>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnTransactionTapped" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                    </SwipeView>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
