<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls">

    <!-- Typography -->
    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style x:Key="SubTitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextGray}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style TargetType="ContentPage">
        <Setter Property="Background" Value="{StaticResource MainBackgroundGradient}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Cards -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBgBrush}" />
        <Setter Property="Stroke" Value="#26314F" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <shapes:RoundRectangle CornerRadius="22" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="20" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#6B5CF680" Radius="18" Opacity="0.35" Offset="0,6" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Inputs -->
    <Style x:Key="InputBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource InputBgBrush}" />
        <Setter Property="Stroke" Value="#1E2A44" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <shapes:RoundRectangle CornerRadius="14" />
            </Setter.Value>
        </Setter>
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="Stroke" Value="{StaticResource PrimaryBlue}" />
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Brush="{StaticResource PrimaryBlue}" Radius="10" Opacity="0.5" Offset="0,4" />
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="InputEntryStyle" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextGray}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.97" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryBlue}" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryBlue}" />
        <Setter Property="BorderWidth" Value="1.5" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.97" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="ChipButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource AccentPurple}" />
        <Setter Property="BackgroundColor" Value="#0B1220" />
        <Setter Property="HeightRequest" Value="8" />
    </Style>
</ResourceDictionary>
