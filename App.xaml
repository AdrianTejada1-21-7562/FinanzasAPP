<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             x:Class="FinanzasApp.App">
    <Application.Resources>

        <!-- Paleta cyberpunk -->
        <Color x:Key="DarkBg">#050816</Color>
        <Color x:Key="CardBg">#131A2D</Color>
        <Color x:Key="NeonCyan">#00F5FF</Color>
        <Color x:Key="NeonPink">#FF00E5</Color>
        <Color x:Key="TextGray">#94A3B8</Color>

        <LinearGradientBrush x:Key="CyberGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#06092A" Offset="0.0" />
            <GradientStop Color="#1A103A" Offset="0.5" />
            <GradientStop Color="#38085F" Offset="1.0" />
        </LinearGradientBrush>

        <Style TargetType="ContentPage">
            <Setter Property="Background" Value="{StaticResource CyberGradient}" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="OpenSansRegular" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource NeonCyan}" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="HeightRequest" Value="48" />
        </Style>

        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#090F20" />
            <Setter Property="HeightRequest" Value="44" />
        </Style>

        <!-- Estilo general para Borders que usamos como tarjetas -->
        <Style TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <shapes:RoundRectangle CornerRadius="24" />
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
